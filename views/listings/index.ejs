<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="topic">All Listings</h1>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <div class="card-main row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1">
        <% for(let listing of allListings) { %>
            <a class="anc" href="/listing/<%= listing._id %>"> 
                    <div class="card col" style="width: 20rem;">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing image">
                    <div class="card-body">
                        <p class="card-text">
                            <h4><%= listing.title %> </h4><br />
                            <b>&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</b><br />
                            <%= listing.description %>
                        </p>
                    </div>
                </div>
            </a>
            <br />
        <% } %>
    </div>

