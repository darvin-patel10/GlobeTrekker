<% layout("/layouts/boilerplate") %>
<div class="container-fluid px-0">
    <h1 class="topic text-center py-4">All Listings</h1>
    
    <div class="container">
        <% if (allListings && allListings.length > 0) { %>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% for(let listing of allListings) { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="position-relative">
                                <img src="<%= listing.image || 'https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80' %>" 
                                     class="card-img-top" 
                                     alt="<%= listing.title %>"
                                     onerror="this.src='https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-dark">â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-2"><%= listing.title %></h5>
                                <p class="card-text text-muted flex-grow-1 mb-3">
                                    <%= listing.description.length > 100 ? listing.description.substring(0, 100) + '...' : listing.description %>
                                </p>
                                <div class="mt-auto">
                                    <a href="/listing/<%= listing._id %>" class="btn btn-outline-dark w-100">View Details</a>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    <%= listing.location %>, <%= listing.country %>
                                </small>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-campground fa-4x text-muted"></i>
                </div>
                <h3 class="text-muted mb-3">No Listings Available</h3>
                <p class="text-muted mb-4">Be the first to add a listing!</p>
                <a href="/listings/new" class="btn btn-dark">Create New Listing</a>
            </div>
        <% } %>
    </div>
</div>