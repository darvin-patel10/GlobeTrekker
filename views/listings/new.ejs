<html>

<head>
    <title>NEW</title>
</head>
<body>
    <% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-3">
            <h2> Enter New Data </h2>
            <form method="POST" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="from-label">Title</label><br />
                    <input name="listing[title]" placeholder="Enter title" type="text" class="from-control col-8" required/>
                </div>

                <div class="mb-3">
                    <label for="image" class="from-label">Image</label><br />
                    <input name="listing[image]" placeholder="Enter image" type="text" class="from-control col-8"/>
                </div>

                <div class="mb-3">
                    <label for="description" class="from-label">Description</label><br />
                    <textarea name="listing[description]" placeholder="Enter description" type="text" class="from-control col-8" required></textarea>
                </div>

                <div class="row">
                    <div class="mb-3 col-3">
                        <label for="price" class="from-label">Price</label><br />
                        <input name="listing[price]" placeholder="Enter price" type="number" class="from-control col-12" required/>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label for="country" class="from-label">Country</label><br />   
                        <input name="listing[country]" placeholder="Enter country" type="text" class="from-control col-34" required/>
                    </div>
    
                </div>

                <div class="mb-3">
                    <label for="location" class="from-label">Location</label><br />
                    <input name="listing[location]" placeholder="Enter location" type="text" class="from-control col-8" required/>
                </div>
                
                
                <button class="btn btn-dark mt-3">Add</button>
                <br /><br />
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>