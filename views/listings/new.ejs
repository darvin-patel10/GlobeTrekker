<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <h2 class="mb-4">Enter New Data</h2>
            
            <form method="POST" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter title" type="text" 
                           class="form-control" id="title" required/>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input name="listing[image]" placeholder="Enter image URL" type="text" 
                           class="form-control" id="image"/>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" 
                              class="form-control" id="description" rows="3" required></textarea>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price" type="number" 
                               class="form-control" id="price" required/>
                    </div>

                    <div class="mb-3 col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" 
                               class="form-control" id="country" required/>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" 
                           class="form-control" id="location" required/>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a href="/listings" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-dark">Add Listing</button>
                </div>
            </form>
        </div>
    </div>
</div>