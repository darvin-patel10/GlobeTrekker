<div class="row">
    <div class="col-8 offset-3">
        <h1><%= listing.title %></h1>
    </div>

        <div class="card-show col-6 offset-3">
            <img src="<%= listing.image %>" class="card-show-img-top" alt="listing image">
            <div class="card-show-body">
