<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <h1 class="mb-4 text-center text-md-start"><%= listing.title %></h1>
            
            <div class="card-show mb-4">
                <img src="<%= listing.image %>" class="card-show-img-top image" alt="listing image">
                <div class="card-body p-4">
                    <p class="card-text mb-3"><strong>Description:</strong> <%= listing.description %></p>
                    <p class="mb-3"><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                    <p class="mb-3"><strong>Location:</strong> <%= listing.location %></p>
                    <p class="mb-3"><strong>Country:</strong> <%= listing.country %></p>
                </div>
            </div>

            <div class="btns d-flex flex-wrap justify-content-center justify-content-md-start gap-3">
                <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark">Edit</a>
                <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>