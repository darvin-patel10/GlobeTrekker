                <p><b>Price : </b>&#8377; <%= listing.price.toLocaleString("en-IN") %> </p><br />
                <p><b>Location : </b><%= listing.location %></p><br />
                <p><b>Country : </b><%= listing.country %></p><br />
            </div>
        </div>

